# --- Modern UI Components ---

# A button with rounded corners and a subtle flat design
<RoundedButton@Button>:
    background_color: 0.2, 0.6, 1, 1
    color: 1, 1, 1, 1
    # STRICTLY NO 'sp' UNITS - CAUSES CRASHES
    font_size: 20
    size_hint_y: None
    height: 50
    canvas.before:
        Color:
            rgba: 0.3, 0.7, 1, 1
        Line:
            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

# A container for "Cards" (Scramble, Stats, etc.)
<CardBox@BoxLayout>:
    orientation: 'vertical'
    spacing: 10
    padding: 15
    size_hint_x: None
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.98
        Line:
            rounded_rectangle: (self.x, self.y, self.width, self.height, 15)

# --- Main Screens ---

<TimerScreen>:
    name: 'timer'
    canvas.before:
        Color:
            rgba: 0.1, 0.12, 0.16, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 25
        spacing: 25
        size_hint_y: 1

        # 1. Scramble Card
        CardBox:
            size_hint_y: 0.2
            Label:
                id: scramble_label
                text: "Loading Scramble..."
                # NO SP
                font_size: 16
                color: 0.2, 0.2, 0.2, 1
                halign: 'center'
                valign: 'middle'
                text_size: self.size

        # 2. Main Content Area
        FloatLayout:
            size_hint_y: 0.55

            # Center Column: Timer
            BoxLayout:
                orientation: 'vertical'
                spacing: 20
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint_x: 0.7
                size_hint_y: 1.0

                Label:
                    id: time_label
                    text: "Ready"
                    # NO SP
                    font_size: 100
                    color: 1, 1, 1, 1
                    size_hint_y: 0.75

                # Status, LED, Delete
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 45
                    spacing: 20

                    Label:
                        id: status_label
                        text: "Hold Spacebar"
                        # NO SP
                        font_size: 20
                        color: 0.8, 0.8, 0.8, 1
                        size_hint_x: None
                        width: 180
                        halign: 'center'

                    LedIndicator:
                        id: led
                        size_hint: None, None
                        size: 28, 28
                        pos_hint: {'center_y': 0.5}

                    RoundedButton:
                        id: delete_btn
                        text: "Delete Last"
                        # NO SP
                        font_size: 18
                        size_hint_x: None
                        width: 160
                        disabled: True
                        on_press: root.delete_last_solve()

                # Quick Stats
                # Fixed height to prevent small box/squeezing
                CardBox:
                    size_hint_y: None
                    min_height: 160
                    Label:
                        id: quick_stats_label
                        text: "Solves: 0"
                        # NO SP
                        font_size: 22
                        color: 0.2, 0.2, 0.2, 1
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size

            # Right Column: Recent Times
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: None
                width: 140
                size_hint_y: 0.9
                pos_hint: {'right': 1, 'center_y': 0.5}

                Label:
                    text: "RECENT"
                    # NO SP
                    font_size: 14
                    color: 0.6, 0.6, 0.6, 1
                    size_hint_y: None
                    height: 30
                    halign: 'center'

                Label:
                    id: recent_times_label
                    text: ""
                    # NO SP
                    font_size: 22
                    color: 0.2, 0.2, 0.2, 1
                    halign: 'center'
                    valign: 'top'
                    text_size: self.size

        # 3. Bottom Bar
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.25
            spacing: 20
            padding: 20
            canvas.before:
                Color:
                    rgba: 0.05, 0.05, 0.05, 0.1
                Rectangle:
                    pos: self.pos
                    size: self.size

            RoundedButton:
                text: "Statistics"
                # NO SP
                font_size: 20
                on_release: app.root.transition.direction = 'right'; app.root.current = 'stats'

            RoundedButton:
                text: "Settings"
                # NO SP
                font_size: 20
                on_release: app.root.transition.direction = 'right'; app.root.current = 'settings'

<StatsScreen>:
    name: 'stats'
    canvas.before:
        Color:
            rgba: 0.1, 0.12, 0.16, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 25
        spacing: 20
        size_hint_y: 1

        Label:
            id: stats_title
            text: "Statistics"
            # NO SP
            font_size: 40
            color: 1, 1, 1, 1
            size_hint_y: None
            height: 60

        # Graph Card
        CardBox:
            size_hint_y: 0.55

            Image:
                id: graph_image
                allow_stretch: True
                keep_ratio: False

        # Stats Text Card
        # Changed to size_hint_y: None with min_height to fix squeezing
        CardBox:
            size_hint_y: None
            min_height: 200
            Label:
                id: stats_label
                text: "Solves: 0\nAvg: --\nBest: --"
                # NO SP
                font_size: 18
                halign: 'left'
                valign: 'top'
                text_size: self.size
                color: 0.2, 0.2, 0.2, 1

        RoundedButton:
            text: "Back to Timer"
            # NO SP
            font_size: 20
            size_hint_y: None
            height: 60
            on_release: app.root.transition.direction = 'left'; app.root.current = 'timer'

