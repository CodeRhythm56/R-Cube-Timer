<SplashScreen>:
    name: 'splash'

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10
        size_hint_y: 1
        canvas.before:
            Color:
                rgba: 0.1, 0.12, 0.16, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "RCube Timer"
            # NO SP
            font_size: 50
            color: 1, 1, 1, 1
            size_hint_y: None
            height: 120

        CardBox:
            size_hint_y: None
            height: 180
            spacing: 20

            Label:
                id: splash_status
                text: "Initializing..."
                # NO SP
                font_size: 20
                color: 0.2, 0.2, 0.2, 1
                halign: 'center'
                valign: 'middle'

            Label:
                id: splash_detail
                text: ""
                # NO SP
                font_size: 16
                color: 0.6, 0.6, 0.6, 1
                halign: 'center'

<LedIndicator@Widget>:
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Ellipse:
            size: self.size
            pos: self.pos
