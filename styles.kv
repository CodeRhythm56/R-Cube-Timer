# --- Modern UI Components ---

# A button with rounded corners and a subtle flat design
<RoundedButton@Button>:
    background_color: 0.2, 0.6, 1, 1 
    color: 1, 1, 1, 1
    font_size: 20
    size_hint_y: None
    height: 50
    canvas.before:
        Color:
            rgba: 0.3, 0.7, 1, 1
        Line:
            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)
            width: 2

# A container for "Cards" (Scramble, Stats, etc.)
<CardBox@BoxLayout>:
    orientation: 'vertical'
    spacing: 10
    padding: 15
    size_hint_x: None
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.98
        Line:
            rounded_rectangle: (self.x, self.y, self.width, self.height, 15)
            width: 0
        Color:
            rgba: 0, 0, 0, 0.1
        Line:
            rounded_rectangle: (self.x + 2, self.y - 2, self.width, self.height, 15)
            width: 0

# --- Main Screens ---

<TimerScreen>:
    name: 'timer'
    canvas.before:
        Color:
            rgba: 0.1, 0.12, 0.16, 1 
        Rectangle:
            pos: self.pos
            size: self.size
    
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        size_hint_y: 1
        
        # 1. Scramble Card
        # REMOVED size_hint_y so it auto-sizes to fit the label
        CardBox:
            Label:
                id: scramble_label
                text: "Loading Scramble..."
                # text_size: self.size forces the label to fit the box exactly
                text_size: self.size
                color: 0.2, 0.2, 0.2, 1
                halign: 'center'
                valign: 'middle'
        
        # 2. Main Content Area
        FloatLayout:
            size_hint_y: 0.65
            
            # Center Column: Timer
            BoxLayout:
                orientation: 'vertical'
                spacing: 20
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint_x: 0.8
                size_hint_y: 0.9
                
                Label:
                    id: time_label
                    text: "Ready"
                    font_size: 100
                    color: 1, 1, 1, 1
                    size_hint_y: 0.7
                
                # Status, LED, Delete
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 45
                    spacing: 20
                    
                    Label:
                        id: status_label
                        text: "Hold Spacebar"
                        font_size: 20
                        color: 0.8, 0.8, 0.8, 1
                        size_hint_x: None
                        width: 180
                        halign: 'center'
                        
                    LedIndicator:
                        id: led
                        size_hint: None, None
                        size: 30, 30
                        pos_hint: {'center_y': 0.5}
                    
                    RoundedButton:
                        id: delete_btn
                        text: "Delete Last"
                        font_size: 18
                        size_hint_x: None
                        width: 160
                        disabled: True
                        on_press: root.delete_last_solve()
                
                # Quick Stats
                # Increased height to 180 to ensure Ao3/Ao12 fits
                CardBox:
                    size_hint_y: None
                    min_height: 180
                    Label:
                        id: quick_stats_label
                        text: "Solves: 0"
                        # text_size: self.size forces label to fit
                        text_size: self.size
                        color: 0.2, 0.2, 0.2, 1
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size

            # Right Column: Recent Times
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: None
                width: 150
                size_hint_y: 0.9
                pos_hint: {'right': 1, 'center_y': 0.5}
                
                Label:
                    text: "RECENT"
                    font_size: 14
                    color: 0.6, 0.6, 0.6, 1
                    size_hint_y: None
                    height: 30
                    halign: 'center'
                
                Label:
                    id: recent_times_label
                    text: ""
                    font_size: 22
                    color: 0.2, 0.2, 0.2, 1
                    halign: 'center'
                    valign: 'top'
                    text_size: self.size

        # 3. Bottom Bar
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.25
            spacing: 20
            padding: 20
            canvas.before:
                Color:
                    rgba: 0.05, 0.05, 0.05, 0.1
                Rectangle:
                    pos: self.pos
                    size: self.size
            
            RoundedButton:
                text: "Statistics"
                font_size: 20
                on_release: app.root.transition.direction = 'right'; app.root.current = 'stats'
                
            RoundedButton:
                text: "Settings"
                font_size: 20
                on_release: app.root.transition.direction = 'right'; app.root.current = 'settings'

<StatsScreen>:
    name: 'stats'
    canvas.before:
        Color:
            rgba: 0.1, 0.12, 0.16, 1 
        Rectangle:
            pos: self.pos
            size: self.size
            
    BoxLayout:
        orientation: 'vertical'
        padding: 25
        spacing: 20
        size_hint_y: 1
        
        Label:
            id: stats_title
            text: "Statistics" 
            font_size: 36
            color: 1, 1, 1, 1
            size_hint_y: None
            height: 60
            
        # Graph Card - Using 0.45 ratio
        CardBox:
            size_hint_y: 0.45
            Image:
                id: graph_image
                allow_stretch: True
                keep_ratio: False
                
        # Stats Text Card - Using 0.35 ratio (increased from 0.3)
        CardBox:
            size_hint_y: 0.35
            Label:
                id: stats_label
                text: "Solves: 0\nAvg: --\nBest: --"
                # text_size: self.size
                text_size: self.size
                font_size: 18
                halign: 'left'
                valign: 'top'
                color: 0.2, 0.2, 0.2, 1
                
        RoundedButton:
            text: "Back to Timer"
            font_size: 20
            size_hint_y: None
            height: 60
            on_release: app.root.transition.direction = 'left'; app.root.current = 'timer'

<SettingsScreen>:
    name: 'settings'
    canvas.before:
        Color:
            rgba: 0.1, 0.12, 0.16, 1 
        Rectangle:
            pos: self.pos
            size: self.size
            
    BoxLayout:
        orientation: 'vertical'
        padding: 25
        spacing: 20
        size_hint_y: 1
        
