<GreyBox@BoxLayout>:
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1
        Rectangle:
            pos: self.pos
            size: self.size

# Placeholder for Future GIF/Blur Loading Screen
<LoadingOverlay@FloatLayout>:
    # Semi-transparent background
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.8
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Label:
            id: loading_text
            text: "Loading..."
            color: 1, 1, 1, 1
            font_size: 30
            bold: True

<SplashScreen>:
    name: 'splash'

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "RCube Timer"
            font_size: 40
            color: 0, 1, 1, 1
            size_hint_y: None
            height: 100

        Label:
            id: splash_status
            text: "Initializing..."
            font_size: 20
            color: 0.8, 0.8, 0.8, 1
            size_hint_y: None
            height: 40

        Label:
            id: splash_detail
            text: ""
            font_size: 16
            color: 0.5, 0.5, 0.5, 1
            size_hint_y: None
            height: 30

<TimerScreen>:
    name: 'timer'
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10
        size_hint_y: 1

        # 1. Scramble Display (Top)
        Label:
            id: scramble_label
            text: "Loading Scramble..."
            font_size: 14
            color: 0, 1, 1, 1
            halign: 'center'
            valign: 'middle'
            size_hint_y: 0.1
            text_size: self.size

        # 2. Main Content Area
        FloatLayout:
            size_hint_y: 0.8

            # Center Column: Timer
            BoxLayout:
                orientation: 'vertical'
                spacing: 10
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint_x: 0.7
                size_hint_y: 0.9

                Label:
                    id: time_label
                    text: "Ready"
                    font_size: 90
                    color: 1, 1, 1, 1
                    size_hint_y: 0.7

                # Status, LED, Delete
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 40
                    spacing: 10

                    Label:
                        id: status_label
                        text: "Hold Spacebar"
                        font_size: 18
                        color: 0.8, 0.8, 0.8, 1
                        size_hint_x: None
                        width: 150

                    LedIndicator:
                        id: led
                        size_hint: None, None
                        size: 20, 20
                        pos_hint: {'center_y': 0.5}

                    Button:
                        id: delete_btn
                        text: "Delete Last"
                        font_size: 14
                        size_hint_x: None
                        width: 130
                        disabled: True
                        on_press: root.delete_last_solve()
                        background_color: 0.5, 0.2, 0.2, 1
                        color: 1, 1, 1, 1

                # Quick Stats
                Label:
                    id: quick_stats_label
                    text: "Solves: 0"
                    font_size: 22
                    color: 0.7, 0.7, 0.7, 1
                    halign: 'left'
                    valign: 'top'
                    size_hint_y: None
                    height: 120
                    text_size: self.size

            # Right Column: Recent Times
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: None
                width: 120
                size_hint_y: 0.9
                pos_hint: {'right': 1, 'center_y': 0.5}

                Label:
                    id: recent_times_label
                    text: ""
                    font_size: 18
                    color: 0.6, 0.6, 0.6, 1
                    halign: 'right'
                    valign: 'top'
                    text_size: self.size

        # 3. Bottom Bar
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1
            spacing: 10

            Button:
                text: "Statistics"
                font_size: 18
                background_color: 0.2, 0.4, 0.8, 1
                color: 1, 1, 1, 1
                on_release: app.root.transition.direction = 'right'; app.root.current = 'stats'

            Button:
                text: "Settings"
                font_size: 18
                background_color: 0.2, 0.2, 0.2, 1
                color: 1, 1, 1, 1
                on_release: app.root.transition.direction = 'right'; app.root.current = 'settings'

<StatsScreen>:
    name: 'stats'
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 15
        size_hint_y: 1

        Label:
            id: stats_title
            text: "Statistics (3x3)"
            font_size: 30
            color: 1, 1, 1, 1
            size_hint_y: None
            height: 50

        GreyBox:
            orientation: 'vertical'
            size_hint_y: 0.6

            Image:
                id: graph_image
                allow_stretch: True
                keep_ratio: False

        GreyBox:
            orientation: 'vertical'
            size_hint_y: 0.4
            padding: 10
            spacing: 5

            Label:
                id: stats_label
                text: "Solves: 0\\nAvg: --\\nBest: --"
                font_size: 18
                halign: 'left'
                valign: 'top'
                text_size: self.size
                color: 1, 1, 1, 1

        Button:
            text: "Back to Timer"
            font_size: 20
            size_hint_y: None
            height: 50
            background_color: 0.3, 0.3, 0.3, 1
            color: 1, 1, 1, 1
            on_release: app.root.transition.direction = 'left'; app.root.current = 'timer'

<SettingsScreen>:
    name: 'settings'
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        size_hint_y: 1

        Label:
            text: "Settings"
            font_size: 30
            color: 1, 1, 1, 1
            size_hint_y: None
            height: 50

        BoxLayout:
            orientation: 'vertical'
            spacing: 20
            size_hint_y: None
            height: 250

            Button:
                text: "WCA"
                font_size: 24
                background_color: 0.2, 0.6, 0.2, 1
                color: 1, 1, 1, 1
                on_release: app.root.transition.direction = 'right'; app.root.current = 'puzzle_selector'

            Button:
                text: "Trainer"
                font_size: 24
                background_color: 0.6, 0.2, 0.6, 1
                color: 1, 1, 1, 1
                on_release: app.root.transition.direction = 'right'; app.root.current = 'trainer_selector'

            Button:
                text: "Reset All Statistics"
                font_size: 20
                background_color: 1, 0.3, 0.3, 1
                color: 1, 1, 1, 1
                on_press: app.root.get_screen('timer').reset_all_stats()

            Button:
                text: "Back to Timer"
                font_size: 20
                background_color: 0.3, 0.3, 0.3, 1
                color: 1, 1, 1, 1
                on_release: app.root.transition.direction = 'left'; app.root.current = 'timer'

